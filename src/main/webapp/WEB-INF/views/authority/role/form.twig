{% extends '../layout/main.twig' %}
{% block title %}{% if empty(user.id) %}Create{% else %}Update {{ role.name }}{% endif %}{% endblock %}
{% block content %}
    <div class="page-header">
        <h1 id="tables">{% if empty(role.id) %}Create{% else %}Update [{{ role.name }}]{% endif %}</h1>
    </div>
    <form method="post" action="/authority/role/{% if empty(role.id) %}0{% else %}{{ role.id }}{% endif %}">
        <div class="row">
            <div class="col-lg-6">
                <div class="card bg-light mb-3">
                    <div class="card-header">Information</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="roleName">Name</label>
                            <input name="name" type="text" class="form-control" id="roleName"
                                   placeholder="ROLE_NAME" readonly
                                   onfocus="this.removeAttribute('readonly');">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card bg-light mb-3">
                    <div class="card-header">Role's Privileges</div>
                    <div class="card-body">
                        <div class="form-group">
                            {% set counter = 0 %}
                            {% for privilege in privileges %}
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" name="privileges[{{ counter }}]" value="{{ privilege.id }}"
                                           class="custom-control-input" id="userPrivilege{{ privilege.id }}"
                                           {% if privilege.id in user.rolesIds %}checked{% endif %}>
                                    <label class="custom-control-label"
                                           for="userPrivilege{{ privilege.id }}">{{ privilege.name }}</label>
                                </div>
                                {% set counter = counter + 1 %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="bs-component">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}