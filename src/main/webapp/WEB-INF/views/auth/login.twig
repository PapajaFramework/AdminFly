{% extends '../layout/main.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card bg-light">
                <div class="card-header">
                    <h2 class="text-center m-3">Authentication</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <form class="bs-component" method="post" action="/auth/login">
                                <div class="form-group has-success">
                                    <label class="form-control-label" for="login">
                                        <h4>Login</h4>
                                    </label>
                                    <input name="username" type="text" placeholder="type login here" class="form-control form-control-lg" id="login">
                                </div>
                                <div class="form-group has-success">
                                    <label class="form-control-label" for="password">
                                        <h4>Password</h4>
                                    </label>
                                    <input name="password" type="password" placeholder="your secret password" class="form-control form-control-lg" id="password">
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Authorize!</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}