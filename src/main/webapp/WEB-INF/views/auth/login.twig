{% extends '../layout/main.twig' %}
{% block title %}Login{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="text-center m-3">Authentication</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <form class="bs-component" method="post" action="/auth/login">
                                <div class="form-group has-success">
                                    <label class="form-control-label" for="login">
                                        Login
                                    </label>
                                    <input name="username" type="text" placeholder="type login here" class="form-control" id="login">
                                </div>
                                <div class="form-group has-success">
                                    <label class="form-control-label" for="password">
                                        Password
                                    </label>
                                    <input name="password" type="password" placeholder="your secret password" class="form-control" id="password">
                                </div>
                                <div class="form-group has-success">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" name="remember-me" id="remember-me">
                                        <label class="custom-control-label" for="remember-me">Remember me</label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Authorize! Войти!</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}