{% extends '../layout/main.twig' %}
{#{% import '../macro/pagination.twig' as pagination %}#}
{% block title %}{{ 'title.posts' | translate }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{{ 'title.posts' | translate }} [{{ domain.name }}]</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-light mb-3">
                {% include 'partials/posts-header-buttons.twig' %}
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col" class="min-vh-100">ID</th>
                            <th scope="col">{{ 'label.name' | translate }}</th>
                            <th scope="col">{{ 'label.roles' | translate }}</th>
                            <th scope="col" class="d-none d-md-table-cell">{{ 'title.status' | translate }}</th>
                            <th scope="col" class="d-none d-lg-table-cell">{{ 'label.registered' | translate }}</th>
                            <th scope="col" class="w-25"></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    {#{{ pagination.pagination(pagination.total, pagination.limit, pagination.current, '/users?page=') }}#}
                </div>
            </div>

        </div>
    </div>
{% endblock %}