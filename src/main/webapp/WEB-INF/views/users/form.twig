{% extends '../layout/main.twig' %}
{% block title %}{% if empty(user.id) %}Create{% else %}Update {{ user.username }}{% endif %}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{% if empty(user.id) %}Create New User{% else %}Update [{{ user.username }}]{% endif %}</h1>
    </div>
    <form method="post" action="/users/{% if empty(user.id) %}0{% else %}{{ user.id }}{% endif %}">
        <div class="row">
            <div class="col-lg-6">
                <div class="card bg-light mb-3">
                    <div class="card-header">Information</div>
                    <div class="card-body">
                        {% if user.new %}
                            <div class="form-group">
                                <label for="userName">Username</label>
                                <input name="username" type="text" class="form-control" id="userName"
                                       placeholder="username" readonly
                                       onfocus="this.removeAttribute('readonly');">
                            </div>
                        {% else %}
                            <div class="form-group">
                                <label for="userName">Username</label>
                                <input name="username" type="text" class="form-control" readonly id="userName"
                                       value="{{ user.username }}">
                            </div>
                            <input type="hidden" name="id" value="{{ user.id }}">
                        {% endif %}
                        <div class="form-group">
                            <label for="userName">Password</label>
                            <input name="password" type="password" class="form-control" id="userPassword"
                                   placeholder="password" readonly
                                   onfocus="this.removeAttribute('readonly');">
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" name="enabled" id="userEnable"
                                       {% if user.enabled %}checked{% endif %}>
                                <label class="custom-control-label" for="userEnable">Enabled user</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card bg-light mb-3">
                    <div class="card-header">Permissions</div>
                    <div class="card-body">
                        <div class="form-group">
                            {% if user.old %}
                                {% set counter = 0 %}
                                {% for role in roles %}
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" name="roles[{{ counter }}]" value="{{ role.id }}"
                                               class="custom-control-input" id="userRole{{ role.id }}"
                                               {% if role.id in user.rolesIds %}checked{% endif %}>
                                        <label class="custom-control-label"
                                               for="userRole{{ role.id }}">{{ role.name }}</label>
                                    </div>
                                    {% set counter = counter + 1 %}
                                {% endfor %}
                            {% else %}
                                <div class="card border-dark mb-3">
                                    <div class="card-body">
                                        <p class="card-text">
                                            Save from the beginning of a new user to be able to assign roles
                                        </p>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="bs-component">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}