{% extends '../layout/main.twig' %}
{% import '../macro/pagination.twig' as pagi %}
{% block title %}Users List{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables">Users</h1>
            </div>

            <div class="card border-light mb-3">
                <div class="card-header">
                    <div class="btn-group btn-group-sm" role="group">
                        <button onclick="location.href='/users/create'" type="button" class="btn btn-primary">Create</button>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col" class="min-vh-100">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Roles</th>
                            <th scope="col" class="d-none d-md-table-cell">Status</th>
                            <th scope="col" class="d-none d-lg-table-cell">Registered</th>
                            <th scope="col" class="w-25"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in pagination.result %}
                            {% set edit = '/users/edit/' ~ user.id %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.username }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        <b>[{{ role.name }}]</b>
                                    {% endfor %}
                                </td>
                                <td class="d-none d-md-table-cell">
                                    {% if user.enabled %}
                                        <span class="badge badge-pill badge-success">Enabled</span>
                                    {% else %}
                                        <span class="badge badge-pill badge-danger">Disabled</span>
                                    {% endif %}
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    [{{ user.created }}]
                                </td>
                                <td class="text-lg-right">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" onclick="location.href='{{ edit }}'" class="btn btn-sm btn-primary">Edit</button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    {{ pagi.pagination(pagination.total, pagination.limit, pagination.current, '/users?page=') }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}