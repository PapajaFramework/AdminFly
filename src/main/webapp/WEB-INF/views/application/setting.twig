{% extends '../layout/main.twig' %}
{% block title %}{{ 'title.setting' | translate }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{{ 'title.setting' | translate }}</h1>
    </div>
    {% include 'partials/buttons.twig' %}
    <div class="row">
        <div class="col-lg-6">
            <div class="card bg-light mb-3">
                <div class="card-header">{{ 'label.language' | translate }}</div>
                <div class="card-body">
                    <ul>
                        {% for locale in languages.locales %}
                        <li>
                            <a href="{{ uri }}?locale={{ locale.language.getCode() }}">{{ locale.language.getName() }} ({{ locale.language.getLocal() }})</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card bg-light mb-3">
                <div class="card-header">{{ 'label.theme' | translate }} <b>({{ theme('name') }})</b></div>
                <div class="card-body">
                    {% set currentTheme = themeName() %}
                    <div class="list-group">
                        {% for theme in themes.getThemes() %}
                            <a class="list-group-item list-group-item-action {% if currentTheme == theme.name %}active{% endif %}"
                               href="{{ uri }}?theme={{ theme.name }}">{{ theme.label }}</a>
                        {% endfor %}
                    </div>
                    <p class="text-muted">{{ 'text.bootswatchThanks' | translate }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}