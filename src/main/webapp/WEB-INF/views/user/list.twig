{% extends '../layout/main.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="tables">Users</h1>
            </div>
            <div class="bs-component">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col" class="min-vh-100">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Status</th>
                        <th scope="col">Registered</th>
                        <th scope="col" class="w-25"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge badge-pill badge-info">{{ role.name }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            {% if user.enabled %}
                                <span class="badge badge-pill badge-success">Enabled</span>
                            {% else %}
                                <span class="badge badge-pill badge-danger">Disabled</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-pill badge-secondary">{{ user.created }}</span>
                        </td>
                        <td class="text-lg-right">
                            <div class="btn-group btn-group-sm" role="group">
                                <button href="#" type="button" class="btn btn-secondary">Edit</button>
                                <button href="#" type="button" class="btn btn-danger">Disable</button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}