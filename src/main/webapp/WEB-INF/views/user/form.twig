{% extends '../layout/main.twig' %}
{% block content %}
    {% set isNew = user.id is empty %}
    <div class="row">
    <div class="col-lg-6">
        <div class="bs-component">
            <form method="post" action="/user">
                <fieldset>
                    <legend>{{ default(user.username, '[new]') }}</legend>
                    {% if isNew %}
                        <div class="form-group">
                            <label for="userName">Username</label>
                            <input name="username" type="text" class="form-control" id="userName"
                                   placeholder="username">
                        </div>
                    {% else %}
                        <div class="form-group">
                            <label for="userName">Username</label>
                            <input name="username" type="text" class="form-control" readonly id="userName"
                                   value="{{ user.username }}">
                        </div>
                        <input type="hidden" name="id" value="{{ user.id }}">
                    {% endif %}
                    <div class="form-group">
                        <label for="userName">Password</label>
                        <input name="password" type="password" class="form-control" id="userPassword"
                               placeholder="password">
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" name="enabled" id="userEnable"
                                   {% if user.enabled %}checked{% endif %}>
                            <label class="custom-control-label" for="userEnable">Enabled user</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </fieldset>
            </form>
        </div>
    </div>
    {% if not isNew %}
    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <fieldset>
                    <legend>Roles</legend>
                    <div class="form-group">
                        {% for role in roles %}
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="userRole{{ role.id }}" checked>
                            <label class="custom-control-label" for="userRole{{ role.id }}">{{ role.name }}</label>
                        </div>
                        {% endfor %}
                    </div>
                </fieldset>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}