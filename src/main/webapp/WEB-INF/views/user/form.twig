{% extends '../layout/main.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form method="post" action="/user">
                    <fieldset>
                        <legend>{{ default(user.username, '[new]') }}</legend>
                        {% if user.id < 0 %}
                        <div class="form-group">
                            <label for="userName">Username</label>
                            <input name="username" type="text" class="form-control" id="userName" placeholder="username">
                        </div>
                        {% else %}
                            {#<input type="hidden" name="user">#}
                        {% endif %}
                        <div class="form-group">
                            <label for="userName">Password</label>
                            <input name="password" type="password" class="form-control" id="userPassword" placeholder="password">
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" name="enabled" id="userEnable" {% if user.enabled %}checked{% endif %}>
                                <label class="custom-control-label" for="userEnable">Enabled user</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}