{% extends '../layout/main.twig' %}
{% block title %}Data Sources{% endblock %}
{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="tables">Data Sources</h1>
        </div>
        <div class="bs-component">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col" class="w-25"></th>
                </tr>
                </thead>
                <tbody>
                {% for source in sources %}
                {% set link = '/server/dataSource/' ~ source %}
                <tr>
                    <td>{{ source }}</td>
                    <td class="text-lg-right">
                        <button type="button" onclick="location.href='{{ link }}'" type="button"
                                class="btn btn-sm btn-secondary">Use Data Source</button>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
