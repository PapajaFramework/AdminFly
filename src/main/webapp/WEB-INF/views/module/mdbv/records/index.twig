{% extends '../layout-link.twig' %}
{% import '../../../shared/macro/fields.twig' as fields %}
{% import '../../../shared/macro/pagination.twig' as pagi %}
{% block title %}MongoDB Viewer | {{ 'label.records' | translate }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{{ 'label.records' | translate }} [{{ activeSource.name }}]</h1>
    </div>
    <div class="card border-light mb-3">
        <div class="card-body">
            <form method="get" action="{{ url('/mdbv/filters') }}" class="form-inline my-2 my-lg-0 float-left">
                <input type="hidden" name="path" id="queryPath" value="{{ app.request.query.path }}">
                <input type="hidden" name="type" id="queryType" value="{{ app.request.query.type }}">
                <div class="input-group" role="group">
                    <select class="custom-select" onchange="setPathToSearch(this)">
                        <option>-- {{ 'label.select' | translate }} --</option>
                        {% for row in rows %}
                        <option value="{{ row.type }}" {% if app.request.query.path == row.path %}selected{% endif %}>{{ row.path }}</option>
                        {% endfor %}
                    </select>
                    <select class="custom-select" name="rule">
                        {% for item in filters %}
                        <option value="{{ item }}" {% if app.request.query.rule == item %}selected{% endif %}>{{ item }}</option>
                        {% endfor %}
                    </select>
                    <input id="queryInput" class="form-control mr-sm-2 form-control" type="text" name="query" value="{{ app.request.query.query }}" placeholder>
                </div>

                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-success">
                        {{ 'label.search' | translate }}
                    </button>
                </div>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-light mb-3">
                <div class="card-header">
                    {% include '../partials/setting-header-buttons.twig' %}
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'label.id' | translate }}</th>
                            <th scope="col">[{{ 'label.database' | translate }}].[{{ 'label.collection' | translate }}]</th>
                            <th scope="col" class="w-25"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for record in records %}
                            {% set view = url('/mdbv/records/view/' ~ record.getId()) %}
                            <tr>
                                <td>
                                    [{{ record.getId() }}]
                                </td>
                                <td>
                                   [{{ activeSource.database }}].[{{ activeSource.collection }}]
                                </td>
                                <td class="text-lg-right">
                                    <button type="button" onclick="location.href='{{ view }}'"
                                            class="btn btn-sm btn-primary">{{ 'label.view' | translate }}</button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    {{ pagi.pagination(pagination.total, pagination.size, pagination.current, url('/mdbv/records', app.request.query, {page : ''}), 12, 4) }}
                </div>
            </div>
        </div>
    </div>
    <script>
        function setPathToSearch(select) {
            let index = select.selectedIndex;
            let queryPath = document.getElementById("queryPath");
            let queryInput = document.getElementById("queryInput");
            let queryType = document.getElementById("queryType");

            if (index) {
                queryInput.removeAttribute("value");
                queryInput.setAttribute("placeholder", select.options[index].innerText);

                queryPath.setAttribute("value", select.options[index].innerText);
                queryType.setAttribute("value", select.options[index].getAttribute("value"));
            }
        }
    </script>
{% endblock %}