{% extends '../layout-link.twig' %}
{% import '../../../shared/macro/fields.twig' as fields %}
{% import '../../../shared/macro/pagination.twig' as pagi %}
{% block title %}{{name}} â€” {{ source.name }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">[{{ source.name }}]: <b>{{ record.getId() }}</b></h1>
    </div>
    <div class="row">
        <div class="col-lg-12">

            <div class="card border-light mb-3">
                <div class="card-header">
                    {% include '../partials/setting-header-buttons.twig' %}
                    <button type="button" class="btn btn-sm btn-outline-danger">HTML / JSON</button>
                </div>
            </div>

            <div>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#recordRendered">{{ 'label.beautified' | translate }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#recordRaw">{{ 'label.raw' | translate }}</a>
                    </li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active show" id="recordRendered">
                        {% for path in paths %}
                        <h3>{{ path.name }} [{{ path.type }}]</h3>
                        <code>{{ path.path }}</code>
                        {% endfor %}
                    </div>
                    <div class="tab-pane fade" id="recordRaw">
                        <textarea>{{ jsonRecord }}</textarea>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}