{% extends '../layout-link.twig' %}
{% import '../../../shared/macro/fields.twig' as fields %}
{% block title %}MongoDB Viewer{% endblock %}
{% block content %}
<div class="page-header mb-4">
    <h1 id="tables">{{ 'label.routing' | translate }}</h1>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="card border-light mb-3">
            {% include '../partials/setting-header-buttons.twig' %}
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">{{ 'label.name' | translate }}</th>
                        <th scope="col">{{ 'label.type' | translate }}</th>
                        <th scope="col" class="w-25"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                    {% set edit = '/mdbv/routing/edit/' ~ item.id %}
                    <tr>
                        <td>
                            <div>
                                {{ item.name }}
                            </div>
                            <span class="small">
                                {{ 'label.path' | translate }}:
                                <code>{{ item.path }}</code>
                            </span>
                        </td>
                        <td><b>[{{ item.type }}]</b></td>
                        <td class="text-lg-right">
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" onclick="location.href='{{ edit }}'"
                                        class="btn btn-sm btn-primary">{{ 'label.edit' | translate }}
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <form action="/mdbv/routing/edit{% if not empty(path.id) %}/{{ path.id }}{% endif %}" method="post">
            <div class="card border-light mb-3">
                <div class="card-header">{{ 'label.editing' | translate }}</div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="pathName">{{ 'label.name' | translate }}</label>
                        <input type="text" class="form-control {{ fields.ifError(result, 'name', 'is-invalid') }}"
                               id="pathName" name="name" value="{{ path.name }}">
                        {{ fields.error(result, 'name') }}
                    </div>
                    <div class="form-group">
                        <label for="pathPath">{{ 'label.path' | translate }}</label>
                        <input type="text" class="form-control {{ fields.ifError(result, 'path', 'is-invalid') }}"
                               id="pathPath" name="path" value="{{ path.path }}">
                        {{ fields.error(result, 'path') }}
                    </div>
                    <div class="form-group">
                        <label for="pathType">{{ 'label.type' | translate }}</label>
                        <select class="form-control {{ fields.ifError(result, 'type', 'is-invalid') }}" name="type" id="pathType">
                            <option>-- {{ 'label.select' | translate }} --</option>
                            {% for type in types %}
                                <option {% if path.type == type %}selected{% endif %} value="{{ type }}">{{ type }}</option>
                            {% endfor %}
                        </select>
                        {{ fields.error(result, 'type') }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-secondary btn-sm my-2 my-sm-0" type="submit">{{ 'label.save' | translate }}</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}