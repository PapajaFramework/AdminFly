{% extends '../layout/main.twig' %}
{% set menu = 'index' %}
{% block title %}Exception[{{ exceptionClass }}]{% endblock %}
{% block content %}
    <div class="card bg-light mb-3">
        <div class="card-header"><h5 class="card-title mt-3">{{ exceptionClass }}</h5></div>
        <div class="card-body">
            {{ rootMassage }}
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-danger" onclick="$('#stackTraceModal').modal();">Stack Trace</button>
        </div>
    </div>
    <div id="stackTraceModal" class="modal fade" tabindex='-1'>
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Stack: [{{ exceptionClass }}]</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <pre class="p-3">{{ stack }}</pre>
                </div>
            </div>
        </div>
    </div>
{% endblock %}